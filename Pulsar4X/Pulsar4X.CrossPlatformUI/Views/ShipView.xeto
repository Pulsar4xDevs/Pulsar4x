<?xml version="1.0" encoding="UTF-8"?>
<Panel
  xmlns="http://schema.picoe.ca/eto.forms" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >
  <TableLayout Width ="800">
    <TableRow ScaleHeight="False">
      <TableCell>
        <StackLayout Orientation="Horizontal">
          <Label>Current System </Label>
          <DropDown x:Name="Systems" Width="120" DataContext="{Binding StarSystems}" SelectedKey="{Binding SelectedSystem}"></DropDown>
        </StackLayout>
      </TableCell>
    </TableRow>
    <TableRow>
      <TableCell>
        <StackLayout Orientation="Vertical" HorizontalContentAlignment="Stretch" Width="200">
          <Label>Ship List</Label>

          <DropDown x:Name="ShipList" DataContext="{Binding ShipList}" SelectedKey="{Binding SelectedShip}"></DropDown>
        </StackLayout>
      </TableCell>
      <TableCell>
        <StackLayout Orientation="Vertical">
          <StackLayout Orientation="Horizontal">
          <Label>Ship Speed (km/s)- </Label>
          <TextBox Text="{Binding ShipSpeed}" Enabled="False"></TextBox>
          <Label> X: </Label>
          <TextBox Text="{Binding XSpeed}" Enabled="False" Width="100"></TextBox>
          <Label> Y: </Label>
          <TextBox Text="{Binding YSpeed}" Enabled="False" Width="100"></TextBox>
          </StackLayout>
          <StackLayout Orientation="Horizontal">
            <Label> Ship Position -                                    </Label>
            <Label> X: </Label>
            <TextBox Text="{Binding XPos}" Enabled="False" Width="100"></TextBox>
            <Label> Y: </Label>
            <TextBox Text="{Binding YPos}" Enabled="False" Width="100"></TextBox>
          </StackLayout>
        </StackLayout>

      </TableCell>
    </TableRow>
    <TableRow ScaleHeight="True">
      <TableCell>
        <StackLayout Orientation="Vertical" HorizontalContentAlignment="Stretch" Width ="200">
          <Label>Orders Available</Label>
          <ListBox Height = "100" x:Name="OrdersPossible" DataContext="{Binding OrdersPossible}"></ListBox>
        </StackLayout>
      </TableCell>
      <TableCell>
        <StackLayout x:Name="TargetArea" Visible="{Binding TargetShown}" Orientation="Vertical" Width="{Binding TargetAreaWidth}">
          <Label>Target</Label>
          <DropDown x:Name="TargetDropDown" DataContext="{Binding TargetList}" Width="100"></DropDown>
          <StackLayout Orientation="Horizontal">
            <Label>Distance to Target in km: </Label>
            <TextBox Text="{Binding TargetDistance}" Enabled="False"></TextBox>
          </StackLayout>
        </StackLayout>
      </TableCell>
      <TableCell>
        <StackLayout Orientation="Vertical" HorizontalContentAlignment="Stretch" Width ="200">
          <Label>Order List</Label>
          <ListBox Height = "100" x:Name="OrderList" DataContext="{Binding OrderList}" ></ListBox>

        </StackLayout>      
      </TableCell>
    </TableRow>
    <TableRow ScaleHeight="False">
      <Button Text="Add Order" Command="{Binding AddOrder}"></Button>
      <Button Text="Remove Order" Command="{Binding RemoveOrder}"></Button>
      
    </TableRow>
    <TableRow></TableRow>
  </TableLayout>
  
</Panel>