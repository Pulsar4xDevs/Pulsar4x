<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
             xmlns:ViewModel="clr-namespace:Pulsar4X.ViewModel;assembly=Pulsar4x.ViewModels" 
             x:Class="Pulsar4X.WPFUI.UserControls.ScientistUC" 
             mc:Ignorable="d" d:DesignWidth="300" Height="72">
    <UserControl.DataContext>
        <ViewModel:ScientistControlVM/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding ScientistFirstName}" />
        <Label  Grid.Row="0" Grid.Column="1" 
			Content="{Binding ScientistLastName}"/>

        <xctk:ByteUpDown Grid.Column="2" Margin="5,0,0,0"
			Value="{Binding ScientistAssignedLabs}"/>
        <Label  Grid.Column="3"
			Content="{Binding ScientistMaxLabs}"/>
        <Expander  Grid.Row="1" Grid.ColumnSpan="4">
            <Expander.Header>
                <Grid Height="24" Width="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="19*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Label" Grid.Row="0" Grid.Column="0"/>
                </Grid>
            </Expander.Header>
            <Grid Background="#FFE5E5E5"/>
        </Expander>
        <ComboBox Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="2"
			ItemsSource="{Binding ResearchableTechs}"
			DisplayMemberPath="Name"
			SelectedValue="{Binding SelectedTech}"/>
        <Button Content="Add" Grid.Column="3" Grid.Row="2"/>
        <Label Grid.Column="2" Grid.Row="2" Margin="0,0,51,0"
			Content="{Binding SelectedTechNextLevel}"/>
        <Label Grid.Column="2" Margin="56,0,0,0" Grid.Row="2"
			Content="{Binding SelectedTechPointsComplete}"  />

    </Grid>
</UserControl>
