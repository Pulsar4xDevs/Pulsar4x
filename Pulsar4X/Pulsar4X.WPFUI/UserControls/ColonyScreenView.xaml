<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Pulsar4X.ViewModel;assembly=Pulsar4x.ViewModels"
             xmlns:uc="clr-namespace:Pulsar4X.WPFUI.UserControls" xmlns:WPFUI="clr-namespace:Pulsar4X.WPFUI" x:Class="Pulsar4X.WPFUI.UserControls.ColonyScreenView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="114*"/>
            <RowDefinition Height="145*"/>
        </Grid.RowDefinitions>
        <DataGrid Margin="10,10,0,10" Grid.Row="1"
			x:Name="FacDataGrid"
                  />
        <ComboBox x:Name="ColonySelection" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ColonySelection_SelectionChanged" Grid.ColumnSpan="2"/>
        <DataGrid Margin="5,10,0,10" Grid.Row="1"
			x:Name="PopDataGrid" RenderTransformOrigin="-0.105,0.513" Grid.Column="1"
                  />
        <uc:RawMineralStockpile x:Name="RawMinStockpile" Margin="5,10,10,10" Grid.Row="1" Grid.Column="3" />
        <uc:RefinedMatsStockpileView x:Name="RefinedMatsStockpile" Grid.Column="1" Margin="5,10,0,10" Grid.Row="2"/>
        <uc:PlanetMineralDepositView x:Name="PlanetMineralDeposit" Grid.Column="2" Margin="10,10,0,10" Grid.Row="1"/>

        <WPFUI:JobAbilityView x:Name="RefinaryAbility" Grid.Row="2" Grid.Column="0"
                                   Margin="0,0,0,10" DataContext="RefinaryAbilityVM"/>
        <WPFUI:JobAbilityView x:Name="ConstructionAbility" Grid.Column="2" Grid.Row="2" Margin="0,0,0,10"
                              DataContext="ConstructionAbilityVM"/>
        <uc:ColonyResearchView x:Name="ColonyResearchView1" Grid.Column="3" Margin="5,0,10,10" Grid.Row="2"/>

    </Grid>
</UserControl>

    